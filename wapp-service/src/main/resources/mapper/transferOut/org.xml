    <!-- 获取当前登录用户的购方名称和税号 -->
    <select id="getGfNameAndTaxNo" resultType="com.xforceplus.wapp.modules.transferOut.entity.OrgEntity">
       /**mycat:schema=${schemaLabel}*/
          select orgname,taxno  from 	t_ac_org WITH(NOLOCK)
          where  orgtype=5
          group by orgname,taxno
    </select>

    </mapper>