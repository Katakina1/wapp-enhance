<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xforceplus.wapp.modules.base.dao.TaxCodeDao">

    <select id="queryList" resultType="com.xforceplus.wapp.modules.base.entity.TaxCodeEntity">
        <if test="entity.offset != null and entity.limit != null">
            SELECT
            TOP (#{entity.limit}) A.*
            FROM
            (
            SELECT
            row_number () OVER (ORDER BY id asc) AS rownumber, o.*
            FROM
            (
        </if>
        SELECT
          *
        FROM
        t_dx_taxcode
        <if test="entity.offset != null and entity.limit != null">
            )
            AS o
            )A
            WHERE
            rownumber >#{entity.offset}

        </if>
    </select>

    <select id="queryTotal" resultType="int">
        SELECT
        count(*)
        FROM
        t_dx_taxcode
    </select>

    <insert id="insert">
        INSERT INTO
        t_dx_taxcode
        (
        tax_sortcode,
        tax_name,
        note
        )
        VALUES
        <foreach collection="list" item="entity" separator="," >
            (
            #{entity.taxSortcode},
            #{entity.taxName},
            #{entity.note}
            )
        </foreach>
    </insert>
    
    <update id="emptyTable">
      truncate TABLE t_dx_taxcode
    </update>

</mapper>