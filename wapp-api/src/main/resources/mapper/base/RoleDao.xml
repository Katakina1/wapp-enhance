<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xforceplus.wapp.modules.base.dao.RoleDao">

	<select id="queryObject" resultType="com.xforceplus.wapp.modules.base.entity.RoleEntity">
		/**mycat:schema=${schemaLabel}*/ select * from t_ac_role where roleid = #{roleid}
	</select>

	<select id="queryList" resultType="com.xforceplus.wapp.modules.base.entity.RoleEntity">
		/**mycat:schema=${schemaLabel}*/ select r.*, (select d.orgname from t_ac_org d where d.orgid = r.orgid) orgName from t_ac_role r
		<where>
			<if test="entity.rolename != null and entity.rolename.trim()!= ''">
				and r.`rolename` like concat('%',#{entity.rolename},'%')
			</if>
			<if test="entity.orgid != null and entity.orgid != ''">
				and r.`orgid`=#{entity.orgid}
			</if>
			<if test="entity.rolecode != null and entity.rolecode.trim() != ''">
				and r.`rolecode` like concat('%',#{entity.rolecode},'%')
			</if>
			<if test="entity.createBy != null"> and r.`create_by` = #{entity.createBy} </if>
		</where>
		order by r.roleid asc
		<if test="entity.offset != null and entity.limit != null">
			limit #{entity.offset}, #{entity.limit}
		</if>
	</select>

	<select id="queryTotal" resultType="int">
		/**mycat:schema=${schemaLabel}*/ select count(*) from t_ac_role r
		<where>
			<if test="entity.rolename != null and entity.rolename.trim()!= ''">
				and r.`rolename` like concat('%',#{entity.rolename},'%')
			</if>
			<if test="entity.orgid != null and entity.orgid != ''">
				and r.`orgid`=#{entity.orgid}
			</if>
			<if test="entity.rolecode != null and entity.rolecode.trim() != ''">
				and r.`rolecode`=#{entity.rolecode}
			</if>
			<if test="entity.createBy != null"> and r.`create_by` = #{entity.createBy} </if>
		</where>
	</select>

	<select id="roleTotal" resultType="int">
		/**mycat:schema=${schemaLabel}*/ select count(*) from t_ac_role
		<where>
			<if test="orgIds != null">
				`orgid` IN
				<foreach item="items" collection="orgIds" open="(" separator="," close=")">
					#{items}
				</foreach>
			</if>
		</where>
	</select>

	<insert id="save" parameterType="com.xforceplus.wapp.modules.base.entity.RoleEntity" useGeneratedKeys="true" keyProperty="entity.roleid">
		/**mycat:schema=${schemaLabel}*/ insert into t_ac_role
		(
			  `roleid`,
  			  `rolename`,
  			  `rolecode`,
  			  `orgid`,
  			  `roledesc`,
  			  `roletype`,
  			  `create_time`,
  			  `create_by`,
  			  `last_modify_time`,
  			  `last_modify_by`
		)
		values
		(
			  #{entity.roleid},
			  #{entity.rolename},
			  #{entity.rolecode},
			  #{entity.orgid},
			  #{entity.roledesc},
			  #{entity.roletype},
			  #{entity.createTime},
			  #{entity.createBy},
			  #{entity.lastModifyTime},
			  #{entity.lastModifyBy}
		)
	</insert>

	<update id="update" parameterType="com.xforceplus.wapp.modules.base.entity.RoleEntity">
		/**mycat:schema=${schemaLabel}*/ update t_ac_role
		<set>
			<if test="entity.rolename != null">`rolename` = #{entity.rolename},</if>
			<if test="entity.rolecode != null">`rolecode` = #{entity.rolecode}, </if>
			<if test="entity.orgid != null">`orgid` = #{entity.orgid}, </if>
			<if test="entity.roledesc != null">`roledesc` = #{entity.roledesc},</if>
			<if test="entity.roletype != null">`roletype` = #{entity.roletype}, </if>
			<if test="entity.lastModifyTime != null">`last_modify_time` = #{entity.lastModifyTime}, </if>
			<if test="entity.lastModifyBy != null">`last_modify_by` = #{entity.lastModifyBy}, </if>
		</set>
		where roleid = #{entity.roleid}
	</update>

	<update id="delete">
		/**mycat:schema=${schemaLabel}*/ delete from  t_ac_role where roleid = #{roleid}
	</update>

	<delete id="deleteBatch" parameterType="int">
		/**mycat:schema=${schemaLabel}*/ delete from t_ac_role where roleid in
		<foreach item="id" collection="ids" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>